<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body text-center">
          <h1 class="card-title">My Restaurant App</h1>
          <p class="card-text">レストラン管理アプリケーションへようこそ！</p>
          
          <% if user_signed_in? %>
            <h3>こんにちは、<%= current_user.email %>さん！</h3>
            <p>ログイン中です</p>
            <%= form_with url: destroy_user_session_path, method: :delete, local: true, 
                data: { confirm: 'ログアウトしますか？' } do |form| %>
              <%= form.submit 'ログアウト', class: 'btn btn-secondary' %>
            <% end %>
          <% else %>
            <div class="mt-4">
              <%= link_to 'ユーザー登録', new_user_registration_path, class: 'btn btn-primary me-3' %>
              <%= link_to 'ログイン', new_user_session_path, class: 'btn btn-outline-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
